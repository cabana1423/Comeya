<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_confirmarPed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_confirmar_cantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/confirmar_titulo"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="22dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/confirmar_total"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmar_titulo"
            android:layout_marginStart="73dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/confirmar_cantidad"
            android:text="TextView" />

        <TextView
            android:id="@+id/confirmar_cantidad"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmar_titulo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:text="TextView" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>